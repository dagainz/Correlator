{
  "system": {
    "config": {
     "system.run_dir": "/Users/timp/Projects/Correlator/run"
    }
  },
  "application": {
    "report": {
      "modules" : {
        "report": {
          "module": ["Correlator.Module.report", "Report"]
        }
      },
      "handlers": {
        "Logback": {
          "handler": ["Correlator.Event.log", "LogbackListener"],
          "filter_expression": "${event.status in [EventStatus.Warning, EventStatus.Error]}"
        }
      }
    },
    "siem-report": {
      "modules" : {
        "OpenSSH": {
          "module": ["Correlator.Module.sshd", "SSHD"],
          "config": {
            "login_failure_limit": "6"
          }
        }
      },
      "handlers": {
        "Logback": {
          "handler": ["Correlator.Event.log", "LogbackListener"],
          "filter_expression": "${event.status in [EventStatus.Warning, EventStatus.Error]}"
        }
      }
    }
  }
}



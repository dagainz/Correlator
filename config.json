{
  "system": {
    "config": {
     "system.run_dir": "/var/run/correlator"
    }
  },
  "application": {
    "report": {
      "description": "Report-only",
      "modules" : {
        "report": {
          "module": ["Correlator.Module.report", "Report"]
        }
      },
      "handlers": {
        "Logback": {
          "handler": ["Correlator.Event.log", "LogbackListener"],
          "filter_expression": "True"
        }
      }
    },
    "ssh-report": {
      "description": "OpenSSH Demo - Report only",
      "modules" : {
        "OpenSSH": {
          "module": ["Correlator.Module.sshd", "SSHD"],
          "config": {
            "login_failure_limit": "6"
          }
        }
      },
      "handlers": {
        "Logback": {
          "handler": ["Correlator.Event.log", "LogbackListener"],
          "filter_expression": "True"
        }
      }
    },
    "ssh-sms": {
      "description": "OpenSSH Demo - Errors via SMS",
      "modules" : {
        "OpenSSH": {
          "module": ["Correlator.Module.sshd", "SSHD"]
          }
        },
        "handlers": {
          "Logback": {
            "handler": ["Correlator.Event.log", "LogbackListener"],
            "filter_expression": "True"
            },
            "SMS": {
              "handler": ["Correlator.Event.sms_sender", "SMS"],
              "filter_expression": "${event.status == EventStatus.Error}",
              "config": {
                "from": "+17624754154",
                "to": "+15878906502",
                "sid": "AC019be492348423fc1a25ac8653a2574b"
              }
          }
        }
      },
    "ssh-email": {
      "description": "OpenSSH Demo - Errors via Email",
      "modules" : {
        "OpenSSH": {
          "module": ["Correlator.Module.sshd", "SSHD"]
          }
        },
        "handlers": {
          "Logback": {
            "handler": ["Correlator.Event.log", "LogbackListener"],
            "filter_expression": "True"
            },
            "E-mail": {
              "handler": ["Correlator.Event.mail_sender", "Email"],
              "filter_expression": "${event.status == EventStatus.Error}",
              "config": {
                "smtp_server": "giganode1",
                "to": "tim.pushor@gmail.com",
                "from": "tim.pushor@gmail.com"
              }
          }
        }
      }

    }
  }


